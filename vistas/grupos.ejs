<%- include ('fragmentos/head.ejs')%>

<div class="container-fluid ">
    <div class="row">
        <div class="col">
            <h2>anadir grupo</h2>
            <img src="img/Login.png" alt="">
        </div>
    </div>
    <form action="/registro" method= "POST" class="Grupos" id="Grupos">

            <div class="Grupos__grupo" id="Grupos__Nombre de la materia:">
                <label for="Nombre de la materia:" class="Grupos__label">Nombre de la materia: </label>
                <div class="Grupos__grupo-input">
                    <input type="text" name="Nombre de la materia:" class=" col-lg-6 form-control" id="Nombre de la materia:" placeholder="Nombre de la materia:" required><br>
                    <i class="Grupos__validacion-estado fas fa-times-circle"></i>
                </div>
                <p class="Grupos__input-error">Es requerido ingresar nombre de materia</p>
            </div>
           
            <div class="Grupos__grupo" id="Grupos__dias_de_la_Semana">
                <label for="Dias que imparte la materia" class="Grupos__label">Dias que imparte la materia </label>
                <div class="Grupos__grupo-input">
                    <imput type="text" name="nombre" value="" id="nombre" class="form-control">
                        <label><input type="checkbox" id="cbox1" value="first_checkbox"> Lunes</label><br>
                        <label><input type="checkbox" id="cbox1" value="first_checkbox"> Martes</label><br>
                        <label><input type="checkbox" id="cbox1" value="first_checkbox"> Miercoles</label><br>
                        <label><input type="checkbox" id="cbox1" value="first_checkbox"> Jueves</label><br>
                        <label><input type="checkbox" id="cbox1" value="first_checkbox"> Viernes</label><br>
                        <label><input type="checkbox" id="cbox1" value="first_checkbox"> Toda la semana</label><br>
                    <i class="Grupos__validacion-estado fas fa-times-circle"></i>
                </div>
                <p class="Grupos__input-error">Seleccione al menos 2 dias de la semana </p>
            </div>
            
            <div class="Grupos__horario" id="Grupos__horario">
               
                <div class="Grupos__grupo-input">
                    <select name="example">
                        <option value="A">"13:00 - 14:00</option>
                        <option value="B">15:00 - 17:30</option>
                        <option value="-">Other</option>
                      </select>
                      
                  
                </div>
                <p class="Grupos__input-error">x</p>
            </div>
            <!-- Grupo: contraseña-->
            <div class="Grupos__grupo" id="grupo__UNIDADES">
                <label for="unidades" class="Grupos__label">Unidades en las que se divide cada curso </label>
                <div class="Grupos__grupo-input">
               
                    <div class="Grupos__grupo-input">
                        <select name="example">
                            <option value="A">"2</option>
                            <option value="A">"3</option>
                            <option value="B">4</option>
                            <option value="-">Other</option>
                          </select>
                </div>
                <p class="Grupos__input-error">SELECCIONA UNA OPCION</p>
            </div>

            <!-- Grupo: contraseña 2-->
            <div class="Grupos__grupo" id="grupo__PERIODO">
                <label for="periodo" class="formulario__label">Periodo de cada unidad </label>
                <div class="Grupos__grupo-input">
                    <div class="Grupos__grupo-input">
                        <select name="example">
                            <option value="A">"unidad1</option>
                            <option value="B">unidad2</option>
                            <option value="C">unidad3</option>
                            <option value="D">unidad4</option>
                            <option value="F">unidad5</option>
                          </select>
                          
                        </div>

            <div class="Grupos__mensaje" id="Grupos__mensaje">
                <i class="fas fa-exclamation-triangle"></i> <b>Error:</b>Por favor rellene el formulario correctamente</b>
            </div>
            
            <div class="formulario__grupo Grupos__grupo-btn-enviar"></div>
            <button type="submit" class="btn btn-primary" >Registrarse</button>
            <p class="Grupos__mensaje-exito" id="Grupos__mensaje-exito">Formulario enviado con exito</p>
    </form>
</div>


